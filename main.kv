#:kivy 2.0.0
# creating a custom button

<CustButton@Button>
    font_size: 32


# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<NumpadGridLayout>:
    id: numpad
    display: entry
    rows: 5
    padding: 10
    spacing: 10

  # input box
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            font_name: "Amasis MT Std Black"
            multiline: False
            max_lines: 1
            on_text: if len(self.text) > 8: self.text = self.text[:8]

  # when buttons are pressed update the entry
    BoxLayout:
        spacing:10
        CustButton:
            text: "7"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "4"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "1"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "<-"
            font_name: "Amasis MT Std Black"
            on_press: entry.text = entry.text[:-1]
        CustButton:
            text: "0"
            font_name: "Amasis MT Std Black"
            on_press: entry.text += self.text
        CustButton:
            text: "Logon"
            font_name: "Amasis MT Std Black"
            on_press: numpad.sessionID(entry.text)

<ReactionGridLayout>:
