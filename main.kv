#:kivy 2.0.0
# creating a custom button

<CustButton@Button>
    font_size: 32


# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<NumpadGridLayout>:
    id: numpad
    display: entry
    rows: 5
    padding: 10
    spacing: 10

  # input box
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

  # when buttons are pressed update the entry
    BoxLayout:
        spacing:10
        CustButton:
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "8"
            on_press: entry.text += self.text
        CustButton:
            text: "9"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "4"
            on_press: entry.text += self.text
        CustButton:
            text: "5"
            on_press: entry.text += self.text
        CustButton:
            text: "6"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "1"
            on_press: entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text: "<-"
            on_press: entry.text = entry.text[:-1]
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "Logon"
            on_press: numpad.logon(self.text)

